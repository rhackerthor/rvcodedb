// import Mill dependency
import mill._
import mill.define.Sources
import mill.modules.Util
import mill.scalalib.TestModule.ScalaTest
import scalalib._
// support BSP
import mill.bsp._
import os.Path

// Note: This project requires .mill-jvm-opts file containing:
//   -Dchisel.project.root=${PWD}
// This is needed because Chisel needs to know the project root directory
// to properly generate and handle test directories and output files.
// See: https://github.com/com-lihaoyi/mill/issues/3840

object v extends Module {
  val scalaVersion    = "2.13.15"
  val chiselVersion   = "7.0.0"
  val chiselIvy       = ivy"org.chipsalliance::chisel:$chiselVersion"
  val chiselPluginIvy = ivy"org.chipsalliance:::chisel-plugin:$chiselVersion"
  val scalaTestIvy    = ivy"org.scalatest::scalatest::3.2.19"
  val osLibIvy        = ivy"com.lihaoyi::os-lib:0.9.1"
  val upickleIvy      = ivy"com.lihaoyi::upickle:3.3.1"
}

object top extends SbtModule { m =>
  override def millSourcePath = super.millSourcePath / os.up
  override def scalaVersion = v.scalaVersion
  override def scalacOptions = Seq(
    "-language:reflectiveCalls",
    "-deprecation",
    "-feature",
    "-Xcheckinit",
    "-Ymacro-annotations",
  )
  override def ivyDeps = Agg(
    v.chiselIvy,
  )
  override def scalacPluginIvyDeps = Agg(
    v.chiselPluginIvy,
  )

  object test extends SbtTests with TestModule.ScalaTest {
    override def ivyDeps = m.ivyDeps() ++ Agg(
      v.scalaTestIvy
    )
  }
}
